<script>
    var preorderConfig, preorderSettings;
    jQuery.ajax({
        type: 'GET',
        contentType: "application/json; charset=utf-8",
        url: `/apps/timesact/config?productId={{ product.id }}`,
        dataType: 'json',
        success: function (data) {
            preorderConfig = data;
            if ($('.product-options-wrapper .swatch-option.selected').length) {
                var variant = $('.product-options-wrapper .swatch-option.selected').data('variant');
                if (preorderConfig && preorderConfig.product.variants[variant].config.status == "ACTIVE") {
                    $('.pre-back-order-text').show(0);
                    $('#product-addtocart-button').text('Pre-order');
                }
            }
        }
    });
    jQuery.ajax({
        type: 'GET',
        contentType: "application/json; charset=utf-8",
        url: `/apps/timesact/shop/settings`,
        dataType: 'json',
        success: function (data) {
            for (var settings in data.settings) {
                if (data.settings[settings].type == "PO") {
                    preorderSettings = data.settings[settings];
                }
            }
        }
    });
</script>

